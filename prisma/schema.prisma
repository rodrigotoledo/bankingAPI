generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  balance Float? @default(0.0)
  status Boolean
  create_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  @@map("customers")
}

model Transference{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  senderId String
  receiverId String
  amount Float
  date DateTime

  status   String   @default("pending")  // Adiciona o estado da transferÃªncia
  errorCode String?  
}
